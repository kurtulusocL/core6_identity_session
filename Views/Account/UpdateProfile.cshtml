@model UpdateProfileDto
@{
    ViewData["Title"] = "Update My Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <h3>@ViewData["Title"]</h3>
        <hr />
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <form asp-action="UpdateProfile" method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <span>Phone Number</span>
                        <input asp-for="PhoneNumber" name="PhoneNumber" value="@Model.PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <span>Email Address</span>
                        <input asp-for="Email" name="Email" type="email" value="@Model.Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <span>Username</span>
                        <input asp-for="Username" name="Username" type="text" value="@Model.Username" class="form-control" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <input type="submit" value="Update Profile" class="btn btn-primary" />
                    </div>
                </form>
            </div>
            <div class="col-md-3"></div>
        </div>
        <div class="row">
            @if (TempData["success"] != null)
            {
                <h3>@TempData["success"]</h3>
            }
            else
            {
                <h3>@TempData["error"]</h3>
            }
        </div>
    </div>
</div>