@model RegisterDto
@{
    ViewData["Title"] = "Admin Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <h3>@ViewData["Title"]</h3>
        <hr />
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-4">
                <form asp-action="Register" method="post" asp-route-returnUrl="@ViewData["ReturnUrl"]">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <span>Name Surname</span>
                        <input asp-for="NameSurname" name="NameSurname" class="form-control" />
                        <span asp-validation-for="NameSurname" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <span>Username</span>
                        <input asp-for="Username" name="Username" class="form-control" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <br />
                     <div class="form-group">
                        <span>Email Address</span>
                        <input asp-for="Email" name="Email" type="email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <span>Gender</span>
                        <input asp-for="Gender" name="Gender" class="form-control" />
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>
                    <br />
                     <div class="form-group">
                        <span>Phone Number</span>
                        <input asp-for="PhoneNumber" name="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <span>Birthdate</span>
                        <input asp-for="Birthdate" name="Birthdate" type="date" class="form-control" />
                        <span asp-validation-for="Birthdate" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <span>Your Password</span>
                        <input asp-for="Password" name="Password" type="password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <span>Confirm Password</span>
                        <input asp-for="ConfirmPassword" name="ConfirmPassword" type="password" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <input type="submit" value="Admin Register" class="btn btn-primary" />
                    </div>
                </form>
            </div>
            <div class="col-md-3"></div>
        </div>
        <div class="row">
            @if (TempData["success"] != null)
            {
                <h3 style="color:black">@TempData["success"]</h3>
            }
            else
            {
                <h3 style="color:black">@TempData["error"]</h3>
            }
        </div>
    </div>
</div>

