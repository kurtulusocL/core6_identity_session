@model LoginDto
@{
    ViewData["Title"] = "Admin Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <h3>@ViewData["Title"]</h3>
        <hr />
        <div class="row">
            <div class="col-md-4">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="row">
                        <div class="col-lg-4">
                            <div class="login-input-head">
                                <p>Email</p>
                            </div>
                        </div>
                        <div class="col-lg-8">
                            <div class="login-input-area">
                                <input type="email" asp-for="Email" />
                                <i class="fa fa-user login-user" aria-hidden="true"></i>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-4">
                            <div class="login-input-head">
                                <p>Password</p>
                            </div>
                        </div>
                        <div class="col-lg-8">
                            <div class="login-input-area">
                                <input type="password" asp-for="Password" />
                                <i class="fa fa-lock login-user"></i>
                            </div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="login-keep-me">
                                        <label class="checkbox">
                                            <input type="checkbox" asp-for="RememberMe"><i></i>Remember Me
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-4">
                        </div>
                        <div class="col-lg-8">
                            <div class="login-button-pro">
                                <button type="submit" class="login-button login-button-lg">Admin Login</button>
                            </div>
                        </div>
                    </div>
                }
                <a asp-controller="Account" asp-action="ForgotPassword" class="btn btn-outline-success btn-sm">Forgot My Password</a>
            </div>
        </div>
    </div>
</div>

