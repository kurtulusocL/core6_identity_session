@model List<RoleAssignVM>
@{
     ViewData["Title"] = "Set Roles for Admin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="RoleAssign" asp-controller="Account" method="post">
    <table class="table">
        <thead>
            <tr>
                <th>
                </th>
                <th>
                    Role Name
                </th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td><input type="checkbox" asp-for="@Model[i].HasAssign" /> </td>
                    <td>
                        @Model[i].RoleName
                        <input type="hidden" asp-for="@Model[i].RoleId" />
                        <input type="hidden" asp-for="@Model[i].RoleName" />
                    </td>
                </tr>
            }
            <tr>
                <td colspan="2">
                    <button type="submit" class="btn btn-outline-success btn-sm">Set Role</button>
                    @*<input asp-for="@Model.RoleId" type="hidden" />*@
                </td>
            </tr>
        </tbody>
    </table>
 
</form>