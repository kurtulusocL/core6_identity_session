@model Order
@{
    ViewData["Title"] = "Add A New Order";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <h3>@ViewData["Title"]</h3>
        <hr />
        <div class="row">
            <div class="col-md-6">
                <form asp-action="CreateOrder" method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <div class="col-lg-3">
                            <label class="control-label" for="inputSuccess">Country List</label>
                        </div>
                        <div class="col-lg-9">
                            <select class="form-control m-bot15" name="CountryId">
                                <option>-- Select One Country --</option>
                                @foreach (var item in ViewBag.Countries)
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <span>City</span>
                        <input asp-for="City" name="City" class="form-control" />
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <span>Province</span>
                        <input asp-for="Province" name="Province" class="form-control" />
                        <span asp-validation-for="Province" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <span>Address</span>
                        <input asp-for="Address" name="Address" type="text" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <span>Quantity</span>
                        <input asp-for="Quantity" name="Quantity" type="number" class="form-control" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <input type="submit" value="Add Order" class="btn btn-primary" />
                        <input type="hidden" asp-for="ProductId" />
                        <input type="hidden" asp-for="CountryId" />
                        <input type="hidden" asp-for="ApplicationUserId" />
                    </div>
                </form>
            </div>
        </div>
        <div class="row">
            @if (TempData["success"] != null)
            {
                <h3 style="color:black">@TempData["success"]</h3>
            }
            else
            {
                <h3 style="color:black">@TempData["error"]</h3>
            }
        </div>
    </div>
    <div>
        <a asp-action="Index" class="btn btn-outline-dark">Back to List</a>
    </div>
</div>
