@model Comment
@{
    ViewData["Title"] = "Add A New Comment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <h3>@ViewData["Title"]</h3>
        <hr />
        <div class="row">
            <div class="col-md-6">
                <form asp-action="CreateComment" method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>                    
                    <div class="form-group">
                        <span>Name Surname</span>
                        <input asp-for="NameSurname" name="NameSurname" class="form-control" />
                        <span asp-validation-for="NameSurname" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <span>Email Address</span>
                        <input asp-for="Email" name="Email" type="email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <span>Comment Subject</span>
                        <input asp-for="Subject" name="Subject" type="text" class="form-control" />
                        <span asp-validation-for="Subject" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <span>Comment Text</span>
                        <input asp-for="Text" name="Text" class="form-control" />
                        <span asp-validation-for="Text" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <input type="submit" value="Add Comment" class="btn btn-primary" />
                        <input type="hidden" asp-for="ProductId" />
                        <input type="hidden" asp-for="ApplicationUserId" />
                    </div>
                </form>
            </div>
        </div>
        <div class="row">
            @if (TempData["success"] != null)
            {
                <h3 style="color:black">@TempData["success"]</h3>
            }
            else
            {
                <h3 style="color:black">@TempData["error"]</h3>
            }
        </div>
    </div>
    <div>
        <a asp-action="Index" class="btn btn-outline-dark">Back to List</a>
    </div>
</div>
